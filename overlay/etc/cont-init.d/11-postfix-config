#!/usr/bin/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Generate Postfix configuration file.
#======================================================================================================================

# generate config from the template
bf-debug "Generating ${RELAY_POSTFIX_CONFIG}."
esh -o ${RELAY_POSTFIX_CONFIG} \
    ${BF_TEMPLATES}/postfix.conf.esh
